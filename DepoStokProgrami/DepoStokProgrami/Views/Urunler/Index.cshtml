@model IEnumerable<DepoStokProgrami.Entities.Urun>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-page">
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Resim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UrunAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UrunKategori)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marka)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fiyat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KdvOran)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ToplamFiyat)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Upload/@item.Resim" width="100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrunAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrunKategori.Adi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marka)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fiyat)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Adet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KdvOran)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ToplamFiyat)
                    </td>


                    <td>
                        <!--   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a> -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

