@model IEnumerable<DepoStokProgrami.Entities.UrunSatis>
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-page">
    <p>
        <a asp-action="Create" class="btn btn-primary">Satış Ekle</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Urun)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MusteriAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToplamFiyatId)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AdetId)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.UrunNotu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tarih)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                double toplamFiyat = item.ToplamFiyatId * item.AdetId;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Urun.UrunAdi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MusteriAdi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => toplamFiyat)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AdetId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UrunNotu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </td>

                    <td>
                        <!-- <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
   
</div>

